{% extends 'website/_website_base.html.twig' %}

{% block page_content %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form method="post" action={{ path('website_authentication') }}>
        <div>
            <label>
                {{ 'email' | trans }}
                <input type="text" name="_username" value="{{ lastUsername }}" required>
            </label>
        </div>

        <div>
            <label>
                {{ 'password' | trans }}
                <input type="password" name="_password" required>
            </label>
        </div>

        <div>
            <button type="submit" class="btn-validate">{{ 'log_in' | trans }}</button>
        </div>
    </form>
{% endblock %}